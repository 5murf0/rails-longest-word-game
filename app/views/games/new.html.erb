<div class="container">

  <h1>New game</h1>

  <div class="letters">
    <% @letters.each do |letter| %>
        <div class="single-letter"><%= letter %></div>
    <% end %>
  </div>

  <div class="user-input">
    <p>What is the longest word you can find?</p>

    <form action="/score" class="form" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <div class="input-group">
        <input type="text" name="word" class="input-field">
        <div>
          <input type="submit" value="Play" class="play-button">
        </div>
      </div>
    </form>

  </div>

</div>
